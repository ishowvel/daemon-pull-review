{
  "name": "daemon-pull-review",
  "description": "A highly context aware pull reviewer",
  "ubiquity:listeners": ["pull_request.opened", "pull_request.ready_for_review"],
  "skipBotEvents": true,
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "openRouterAiModel": {
        "default": "anthropic/claude-3.5-sonnet",
        "type": "string"
      },
      "openRouterBaseUrl": {
        "default": "https://openrouter.ai/api/v1",
        "type": "string"
      },
      "tokenLimit": {
        "default": {
          "context": 200000,
          "completion": 4096
        },
        "type": "object",
        "properties": {
          "context": {
            "type": "number"
          },
          "completion": {
            "type": "number"
          }
        },
        "required": ["context", "completion"]
      }
    }
  }
}
